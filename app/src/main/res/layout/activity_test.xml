<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zumirka.androidquiz.TestActivity">

    <TextView
        android:id="@+id/Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/Answear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Button"
        android:onClick="OnClickButton"
        app:layout_constraintTop_toBottomOf="@+id/Question"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/Answear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Button"
        android:onClick="OnClickButton"
        app:layout_constraintTop_toBottomOf="@+id/Answear1"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/Answear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        android:onClick="OnClickButton"
        app:layout_constraintTop_toBottomOf="@+id/Answear2"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/NextQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/Answear3"
        tools:layout_editor_absoluteX="148dp" />


</android.support.constraint.ConstraintLayout>
